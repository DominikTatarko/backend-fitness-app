<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessAplikacia.Views.LoginPage"
             Title="Login"
             BackgroundColor="#2C2C2C" 
    Padding="30">

    <ScrollView>
        <StackLayout Spacing="20" VerticalOptions="CenterAndExpand">

            <!-- Header Label -->
            <Label Text="Vitaj späť!"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                HorizontalOptions="Center"
                   Margin="0,10"/>

                <!-- Email Entry -->
                <Frame Padding="12"
                   CornerRadius="15"
                   BorderColor="#555555" 
                    BackgroundColor="#444444"
                    
                    HasShadow="True">
                    <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       TextColor="White" 
                        PlaceholderColor="#A0A0A0"
                       FontSize="16"/>
                </Frame>

                <!-- Password Entry -->
                <Frame Padding="12"
                   CornerRadius="15"
                   BorderColor="#555555" 
                    BackgroundColor="#444444"
                   
                    HasShadow="True">
                    <Entry x:Name="PasswordEntry"
                       Placeholder="Heslo"
                       IsPassword="True"
                       TextColor="White" 
                        PlaceholderColor="#A0A0A0"
                       FontSize="16"/>
                </Frame>

                <!-- Login Button -->
                <Button Text="Prihlasiť sa"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#2ECC71"
                    TextColor="White"
                    CornerRadius="15"
                    FontSize="16"
                    HeightRequest="50"
                    Margin="0,10"/>

                    <!-- Register Button -->
                    <Button Text="Zaregistruj sa"
                    Clicked="OnBackClicked"
                    BackgroundColor="#E74C3C"
                        TextColor="White"
                    CornerRadius="15"
                    FontSize="16"
                    HeightRequest="50"
                    Margin="0,10"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
