<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessAplikacia.Views.MealDetailPage"
             
             BackgroundColor="#f7f9fc">

    <ScrollView>
        <StackLayout Padding="15" Spacing="20">

            <!-- Meal Name (Title) -->
            <Frame Padding="15" BackgroundColor="Black" CornerRadius="15"
                   HorizontalOptions="FillAndExpand">
                <Label Text="{Binding NazovJedla}"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White"
                       LineBreakMode="WordWrap"/>
            </Frame>

            <!-- Meal Macros Card -->
            <Frame Padding="20" CornerRadius="15"
                   BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="#d1d5db"
                   Margin="5">

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                    <Label Text="{Binding Kalorie, StringFormat='{0} kcal'}"
                           FontSize="18"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Sacharidy, StringFormat='{0}g Carbs'}"
                           FontSize="18"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Tuky, StringFormat='{0}g Fat'}"
                           FontSize="18"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                </StackLayout>
            </Frame>

            <!-- Steps Title -->
            <Label Text="Postup PrÃ­pravy:"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,5"/>

            <!-- Steps List -->
            <CollectionView ItemsSource="{Binding Kroky}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" CornerRadius="12"
                               BackgroundColor="White"
                               HasShadow="True"
                               BorderColor="#d1d5db"
                               Margin="5">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="{Binding CisloKroku}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#1e40af"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding PopisKroku}" 
                                       FontSize="16" 
                                       TextColor="Black"
                                       LineBreakMode="WordWrap"
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
