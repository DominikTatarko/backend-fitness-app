<Shell 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FitnessAplikacia.Views"
    x:Class="FitnessAplikacia.AppShell"
    Shell.BackgroundColor="#121212"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="LightGray"
    Shell.TabBarBackgroundColor="#1E1E1E"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <!-- Home Tab -->
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>

        <!-- Programs Tab -->
        <Tab Title="Programs" Icon="programs_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProgramsPage}" />
        </Tab>

        <!-- Statistics Tab -->
        <Tab Title="Statistics" Icon="statistics_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:StatisticPage}" />
        </Tab>

        <!-- Food Tab -->
        <Tab Title="Food" Icon="food_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:FoodPage}" />
        </Tab>
    </TabBar>

</Shell>
